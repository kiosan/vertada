<%content_for(:title, "Tag sharing") %>
<h1 class='page_title'>Share your tags</h1>
<table cellspacing="10">
  <tr valign="top">
      <td width="50%">
	       	<h2>Shares for me</h2>
			<div class="sharing_list">
				<%@sharings_to_me.each do |share|%>
				<div class="share">
					<span class="share_user"><%=share.owner.login%></span>
					 shared 
					 <span class="share_tag"><%=share.tag.name%></span> with me
					 <input type="button" value="Decline" >
				</div>
				<%end%>
			</div>
      </td>
	   <td width="50%">
	       	<h2>My shares </h2>
			<div class="sharing_list">
				<%@sharings_by_me.each do |share|%>
					<% form_remote_tag(:url => sharings_path, :method=>'DELETE') do%>
					<div class="share">
						I shared  
						<span class="share_tag"><%=share.tag.name%></span> 
						with
						<span class="share_user"><%=share.user.login%></span>
						<input type="submit" value="Decline" >
						
					</div>
					<%end%>
				<%end%>
			</div>
    	</td>
   </tr>
   <tr>
   	<td colspan="2">
   		<hr>
		<%=render :partial=>"tags", :locals=>{:tag_sharings=>@unshared_tags}%>    
   	</td>
   </tr>
</table>
