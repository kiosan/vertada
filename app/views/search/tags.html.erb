<%content_for(:title, "Filtered Ideas") %>

<h1 class='page_title'>Filtered Ideas</h1>
&larr; <%=link_to "back to all ideas list", ideas_path%>
<table>
  <tr>
      <td width='50%'>
        
        <b><%="Selected tags:"%></b><br/>
            <small class="hint"><%="Click on tag to remove it from filter"%></small><br/>
      			<%=render :partial=>"ideas/tags", :locals=>{:tags=>@tags, :search_url=>false, :sharings => true}%>    
      </td>
      <td>
        <%if @related_tags.length > 0%>
      	<div class="outerBox" >
      		<div class="innerBox" >
      			<b><%="Related tags:"%></b><br/>
            <small class="hint"><%="Click on tag to add it to filter"%></small><br/>
      			<%=render :partial=>"ideas/tags", :locals=>{:tags=>@related_tags, :search_url=>false}%>    
      		</div>
      	</div>
      	<%end%>
      </td>  
  </tr>  
</table>



<%=will_paginate @ideas%>
<%=render :partial=>"ideas/idea", :collection=>@ideas%>
<%=will_paginate @ideas%>
<br/>